rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Voice posts - public read, authenticated write (owner only)
    match /voice-posts/{userId}/{postId}.webm {
      allow read: if true; // Public read
      allow write: if request.auth != null && request.auth.uid == userId 
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('audio/(webm|mp4)');
    }
    
    // Legacy posts path (for backward compatibility)
    match /posts/{userId}/{postId}.webm {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('audio/(webm|mp4)');
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
